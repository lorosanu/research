  \end{beamercolorbox}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{headline}{
\leavevmode

\begin{beamercolorbox}[wd=\paperwidth]{headline}
	\begin{columns}[T]
		\begin{column}{.01\paperwidth}
		\end{column}
		\begin{column}{.98\paperwidth}
			\vskip3ex
			\begin{center}
				\usebeamercolor{title in headline}{\color{fg}\textbf{\LARGE{\inserttitle}}\\[1ex]}
			\end{center}
			\begin{columns}[T]
				\begin{column}{.22\paperwidth}
					\vskip6ex
					\usebeamercolor{author in headline}{\color{fg}\large{\insertauthor}\\[1ex]}
				\end{column}
				\begin{column}{.50\paperwidth}
					\begin{center}
				 	\includegraphics[scale=0.9]{Image/logos/logos.png}
					\end{center}
				\end{column}
				\begin{column}{.22\paperwidth}
					\vskip4ex
					\flushright\usebeamercolor{institute in headline}{\color{fg}\large{\insertinstitute}\\[1ex]}
				\end{column}
			\end{columns}
		\end{column}
		\begin{column}{.01\paperwidth}
		\end{column}
	\end{columns}
\vskip2ex
\end{beamercolorbox}

\begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
\rule{0pt}{3pt}
\end{beamercolorbox}

}

